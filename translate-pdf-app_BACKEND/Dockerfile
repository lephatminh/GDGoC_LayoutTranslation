# â”€â”€â”€ Stage 1: Base image with Python â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM python:3.11-slim AS backend

# â”€â”€â”€ Set working directory â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
WORKDIR /app

# â”€â”€â”€ Install dependencies â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# â”€â”€â”€ Copy source code â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
COPY . .

# Create folders
RUN mkdir -p /app/storage/originals /app/storage/translateds

# ðŸ”¥ Fix permission issue
RUN chmod -R 777 /app/storage

# Switch to non-root
USER 1001

# Start the app

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--http", "httptools", "--limit-concurrency", "100", "--backlog", "2048"]