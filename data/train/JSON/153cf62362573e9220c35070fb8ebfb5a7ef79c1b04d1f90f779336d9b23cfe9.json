            "font": {
                "color": [
                    0,
                    0,
                    0,
                    255
                ],
                "name": "/POGHPZ+CMR12",
                "size": 11.9552001953125
            },
            "text_vi": "Thí nghiệm Nemo 3 hiện đang chạy được dành cho tìm kiếm 0"
